using System;

namespace Echo
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("글자를 입력하고 엔터 키를 누르세요.");
            string userInput = Console.ReadLine(); // 사용자의 키보드 입력값을 받는다.

            Console.Write("입력한 글은 ");
            Console.Write(userInput);
            Console.WriteLine("입니다.");
        }
    }
}
