using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Test3
{
    class Program
    {
        static void Main(string[] args)
        {
            // 3-1
            // 다음 사칙연산의 결과를 출력하는 코드를 작성하세요. 결과만 출력하세요.
            // 1. 10 + 5   2. 20 - 10   3. 4 × 7   4. 20 ÷ 7의 몫과 나머지

            Console.WriteLine(10 + 5);
            Console.WriteLine(20 - 10);
            Console.WriteLine(4 * 7);
            Console.WriteLine(20 / 7);
            Console.WriteLine(20 % 7);

            // 3-2
            // 다음 문자열 연산의 결과를 출력하는 코드를 작성하세요.
            // "안녕" + "하세요"

            Console.WriteLine("안녕" + "하세요");

            // 3-3
            // 다음 코드의 결과를 적어보세요.
            int number1 = 20;
            int number2 = 5;
            int number3 = 3;
            int number4 = 13;
            int number5;

            number1 = number1 + number2; // 25
            number2 = number3 + number4; // 16
            number4 = number1 - number4; // 12
            number3 = number2 / number4; // 1
            number5 = number2 % number4; // 4

            Console.WriteLine(number1);
            Console.WriteLine(number2);
            Console.WriteLine(number3);
            Console.WriteLine(number4);
            Console.WriteLine(number5);

            // 25
            // 16
            // 1
            // 12
            // 4

            // 3-4
            // (4-2) * 16 + 2를 구하기 위해서 다음의 코드를 완성하세요.
            int number6 = 4 - 2;
            number6 = number6 * 16;
            number6 = number6 + 2;

            Console.WriteLine("(4 - 2) * 16 + 2");
            Console.WriteLine(number6);

            // 3-5
            // 중단점과 자동 창, 로컬 창 , 조사식 창을 이용해서 아래 코드에서 변수 number의 값이 어떻게 변하는지 확인해보세요.
            // number의 값은 총 4번 변합니다.

            int number7 = 2;
            number7 = number7 * 3; // 6
            number7 = number7 - 4; // 2
            number7 = number7 / 2; // 1

            Console.WriteLine(number7);

            // 주머니에 동전이 10개 들어 있습니다. 아람이에게 원하는 만큼 동전을 가져가라고 하니 손을 넣어 절반을 가져가더니
            // 죄책감을 느꼈는지 1개를 도로 넣습니다. 그다음에는 우람이가 남은 동전의 절반을 꺼내더니 충분치 못했다 생각했던지
            // 2개를 더 꺼내 갑니다. 아람이가 가져간 동전과 우람이가 가져간 동전 그리고 주머니에 남은 동전이 몇 개인지 출력하는
            // 프로그램을 작성하세요.

            int pocketCoin = 10;

            int aramCoin = pocketCoin / 2; // 5
            pocketCoin = pocketCoin - aramCoin; // 5

            aramCoin = aramCoin - 1; // 4
            pocketCoin = pocketCoin + 1; // 6

            int uramCoin = pocketCoin / 2; // 3
            pocketCoin = pocketCoin - uramCoin; // 3

            uramCoin = uramCoin + 2; // 5
            pocketCoin = pocketCoin - 2; // 1

            Console.Write("아람이가 가져간 동전: ");
            Console.WriteLine(aramCoin);

            Console.Write("우람이가 가져간 동전: ");
            Console.WriteLine(uramCoin);

            Console.Write("주머니에 남은 동전: ");
            Console.WriteLine(pocketCoin);
        }
    }
}
