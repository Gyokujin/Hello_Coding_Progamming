using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Test1
{
    class Program
    {
        static void Main(string[] args)
        {
            // 1-1
            // 함수를 다섯 번 호출해서 다음 실행 화면처럼 콘솔 창에 네 줄을 출력하세요. 함수는 꼭 다섯 번 호출해야 합니다.
            // Hello C#
            // 10+10 =20
            // C#의 세계에 오신 것을 환영합니다.
            // 감사합니다.
            //

            Console.WriteLine("Hello C#");
            Console.WriteLine("10+10 =20");
            Console.WriteLine("C#의 세계에 오신 것을 환영합니다.");
            Console.WriteLine("감사합니다.");
            Console.WriteLine("");

            // 1-2
            // 다음 코드를 실행하면 어떤 결과가 나올까요? 실행 화면에 예상 내용을 적어보세요.

            Console.WriteLine("출력문");
            Console.Write("abcde");
            Console.Write("가나다라마");
            Console.WriteLine("qwerty");

            // 출력문
            // abcde가나다라마qwerty

            // 1-3
            // 다음 문장을 출력하세요.
            // 출력문" 기초문제

            Console.Write("출력");
            Console.Write("문");
            Console.Write("\"");
            Console.Write(" 기초");
            Console.Write("문제");
            Console.WriteLine("");

            // 1-4
            // 다음 코드에는 오류가 있습니다. 그 문제를 고치세요.

            Console.Write("무엇이 무엇이"); // 문자열을 입력할 때는 큰따옴표 안에 입력해야 한다.
            Console.WriteLine("문제일까?");
            Console.WriteLine("\"");

            // 1-5
            // 다음 결과를 출려하는 코드를 작성하세요.
            // ?!"
            // """"""

            Console.WriteLine("?!\"");
            Console.WriteLine("\"\"\"\"\"\"");
        }
    }
}
